<section class="container">
    <div class="row align-items-center ">
        <div class="col rounded-1">
            <figure class="figure">
                {{#if product.thumbnail}}
                    {{#if product.thumbnail.[0]}}
                        <img class="figure-img img-fluid rounded" src="{{product.thumbnail.[0]}}" alt="Imagen de Articulo">
                    {{else}}
                        <img src="/img/Imagen_no_disponible.png" class="figure-img img-fluid rounded" alt="Imagen de Articulo">
                    {{/if}}
                {{else}}
                    <img src="/img/Imagen_no_disponible.png" class="figure-img img-fluid rounded" alt="Imagen de Articulo">
                {{/if}}
            </figure>
        </div>
        <div class="col border border-dark rounded-1">
            <p>SKU: {{product.code}}</p>
            <br>
            <p>{{product.title}}</p>
            <br>
            <h5 class="fw-bolder" style="color: black">{{product.description}}</h5>
            <br>
            <p>Stock: {{product.stock}}</p>
            <br>
            <p class="text-center">$ {{product.price}}</p>
        </div>
        <div class="col rounded-1">
            <div class="text-center">
                <a onclick="sumarCantidad({{product.stock}})" id="idsumaProducto1" class="btn  mt-auto">
                    <img src="/img/sumar.png">
                </a>
                <span id="idContadorProducto" class="badge bg-dark2 text-dark ms-1">0</span>
                <a onclick="restarCantidad()" id="idRestaProducto1" class="btn  mt-auto">
                    <img src="/img/restar.png">
                </a>
            </div>
            <div class="text-center">
                <button onclick="agregarProducto('{{product._id}}')" type="button" class="btn btn-secondary">Agregar al Carrito</button>
            </div>
            <br>
            <div class="text-center">
                <a href="/products"><button type="button" class="btn btn-secondary">Volver a la Tienda</button></a>
            </div>
        </div>
    </div>
</section>
