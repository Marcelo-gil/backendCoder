<div class="container">
    <div class="row">
        <div class="col-lg-6 col-md-12 col-sm-12">
            <div class="well well-sm">
                <form id="resetForm" class="form-horizontal mt-5" >
                    <fieldset>
                        <legend class="p-3 mb-2 bg-primary text-white">Ingrese la Contraseña</legend>
                        <div class="form-group">
                            <div class="col-md-12">
                                <label>Email</label>
                                <input disabled name="email" class="form-control" value={{this.email}}>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                <label>Contraseña</label>
                                <input name="password" type="password" class="form-control">
                            </div>
                        </div> 
                        <br/>
                        <p id="errorMessage" class="col-md-12 text-danger mt-3"></p>                        
                        <input name="token" value={{this.token}} type="hidden"/>
                        <div class="form-group">
                            <div class="col-md-12 text-center mt-3">
                                <button type="submit" class="btn btn-primary btn-lg">Cambiar Contraseña</button>
                            </div>
                        </div>
                    </fieldset>
                </form>
                <br/>
                <p>¿Ya tienes una cuenta? <a href="/login">Ingresa aquí</a></p>
            </div>
        </div>
    </div>
</div>
<script src="/js/resetUserPassword.js"></script>