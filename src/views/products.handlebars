<h1 style="text-align:center">Bienvenido {{user.name}}</h1>
<h2 style="text-align:center"> Email: {{user.email}} Role: {{user.role}}</h2>
<section class="container">
    <table class="table table-success table-striped">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Title</th>
                <th scope="col">Description</th>
                <th scope="col">Price</th>
                <th scope="col">Code</th>
                <th scope="col">Stock</th>
                <th scope="col">Status</th>
                <th scope="col">Category</th>
                <th scope="col">Agregar al Carrito</th>

            </tr>
        </thead>
        <tbody>
            {{#each products}}
                <tr>
                    <td>{{this._id}}</td>
                    <td>{{this.title}}</td>
                    <td>{{this.description}}</td>
                    <td>{{this.price}}</td>
                    <td>{{this.code}}</td>
                    <td>{{this.stock}}</td>
                    <td>{{this.status}}</td>
                    <td>{{this.category}}</td>
                    <td style="text-align:center"><button id="btnAgregar" class="rounded-pill">Agregar</button></td>
                </tr>
            {{/each}}
        </tbody>
    </table>
    {{#if hasPrevPage}}
        <a href="/products?page={{prevPage}}&limit=10"><button class="rounded-pill" >Anterior</button></a>
    {{/if}}
    {{#if hasNextPage}}
        <a href="/products?page={{nextPage}}&limit=10"><button class="rounded-pill" >Siguiente</button></a>
    {{/if}}
    <a href="/api/users/logout"><button class="rounded-pill" >Salir</button></a>
</section>
